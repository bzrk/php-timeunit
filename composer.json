{
  "name": "bzrk/php-timeunit",
  "description": "A library for better reading of time definitions",
  "minimum-stability": "stable",
  "license": ["MIT"],
  "authors": [
    {
      "name": "Thomas WÃ¼nsche"
    }
  ],
  "autoload": {
    "psr-4": {
      "BZRK\\TimeUnit\\": "src/BZRK/TimeUnit"
    }
  },
  "require": {
    "php" : ">= 7.4"
  },
  "require-dev": {
    "phpunit/phpunit": ">=9.5.0",
    "phpstan/phpstan": ">=0.12.99",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "verify" : [
      "@composer update", "@phpcs", "@phpstan", "phpunit"
    ],
    "phpcbf" : "phpcbf --standard=PSR12 src tests",
    "phpcs" : "phpcs --standard=PSR12 src tests",
    "phpstan" : "phpstan analyse -l 7 src tests"
  }
}